@model IEnumerable<FPTApp.ViewModel.UsersInRole>
@{
    ViewBag.Title = "Users With Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div>
        <h3>
            <b>Users with Roles</b>
        </h3>
    </div>
    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {
        <p class="text-primary m-0 font-weight-bold">
            @Html.ActionLink("New user", "Register", "Account")
            
        </p>
        
    }

    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="UsersWithRoles">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Edit</th>
                    <th>Delete</th>
                    <th>Details</th>
                  
                </tr>
            </thead>
            
   @foreach (var user in Model)
                {
                    <tr>
                        @if ((user.Role.Contains("Trainee") || user.Role.Contains("Admin")) == false)
                        {
                            <td>@user.Name</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>@Html.ActionLink("Edit", "Edit", new { id = user.UserId })</td>
                            <td>@Html.ActionLink("Delete", "Delete", new { id = user.UserId })</td>
                            <td>@Html.ActionLink("Details", "Details", new { id = user.UserId })</td>
                            
                        }
                    </tr>
}
        </table>
    </div>


    </tr>

    
    </table>
</div>

</div>


