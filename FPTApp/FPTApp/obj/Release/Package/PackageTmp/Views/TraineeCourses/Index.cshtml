@model IEnumerable<FPTApp.Models.TraineeCourse>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("TrainingStaff"))
{
    <p>
        @Html.ActionLink("Assign Trainee to Course", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(p => p.Trainee)
            </th>
            <th>
                @Html.DisplayNameFor(p => p.Course)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainee.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}
@if (User.IsInRole("Trainee"))
{<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.Course)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
            </tr>
        }
    </table>
}